- //access to adminSettingsCtrl functions
- //the information saved needs to go to setting.value as either an object or other piece of data

div.separate-vert-small
  div.padding-small.table-responsive
    table.table
      tr
        th Path
        th Delete
      tr(data-ng-repeat="path in setting.value | orderBy")
        td {{ path }}
        td
          a(href="javascript:void(0)",data-ng-click="setting.value.splice(setting.value.indexOf(path),1)")
            div Delete
  div(class="separate-vert-small")
    div(class="text-center")
      form(class="form-inline",data-ng-submit="functions.pushArray(setting.value,setting.temp)")
        div(class="form-group")
          label(for="tempNewAdminUser") Add Path
          input(type="text",id="tempNewAdminUser",name="tempNewAdminUser",class="form-control margin-left-small",data-ng-model="setting.temp")
          button(type="submit",class="btn btn-default margin-left-small") Add Path
